<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scoreLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7AFAFAFA"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="24dp">

    <!-- Display the user's score -->
    <TextView
        android:id="@+id/scoreTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:textColor="#000000"
        android:textSize="28sp"
        android:textStyle="bold" />

    <!-- Displays personalized feedback like "Great Job! -->
    <TextView
        android:id="@+id/feedbackTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:background="#E9EBDD"
        android:text="@string/feedbackHere"
        android:textColor="#444444"
        android:textSize="20sp" />

    <!-- Button to restart the flashcard quiz -->
    <Button
        android:id="@+id/reviewButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:allowUndo="true"
        android:backgroundTint="#E9EBDD"
        android:text="@string/Exit"
        tools:ignore="VisualLintButtonSize" />

    <!-- Button to exit the app -->
    <Button
        android:id="@+id/exitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="#E9EBDD"
        android:text="@string/reviewAgain" />

</LinearLayout>